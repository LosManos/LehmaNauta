@model AnonymousWeb.Models.HomeIndexViewmodel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>LehmaNauta</h1>
    @using (Html.BeginForm("Index", "Home", FormMethod.Post,
        new { enctype = "multipart/form-data" }))
    {
    <p class="lead">
        File
        <input type="file" id="FileUpload" name="FileUpload"/>
    </p>
    <p>
        <input type="submit" class="btn btn-primary btn-large" value="Upload" />
    </p>
    }
</div>

@if( Model.Files.Count >= 1 ){
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <div>Uploaded file:</div>
            <ul>
                @foreach (var file in Model.Files)
                {
                    <li>
                        <div>
                            @Html.ActionLink(file.Filename, "Download/" + file.Id)
                            Size: @file.Length bytes.
                        </div>
                        <div>
                            Copy link here: https://localhost/LehmaNauta.AnonymousWeb/Home/Download/@file.Id
                        </div>
                    </li>
                }
            </ul>
        </div>
        <div class="col-2"></div>
    </div>
}